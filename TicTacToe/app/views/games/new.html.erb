<h1>New game</h1>
New game:
<% form_for @game do |g| %>
<% if @game.errors.any? %>
  <div class="error_messages">
    <h2>Form is invalid</h2>
    <ul>
      <% for message in @game.errors.full_messages %>
      <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div class="field">
  <%= f.label :opponent %>
  <%= f.text_field :opponent %>
</div>
<div class="actions"><%= f.submit %></div>
<% end %>